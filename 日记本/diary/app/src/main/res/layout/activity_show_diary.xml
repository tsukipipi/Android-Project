<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.win.diary.ShowDiary">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/AppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/tv_diaryTitle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/AppBarLayout"
        android:textSize="25sp"
        android:text="日记标题"
        android:textColor="@color/colorPrimary"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/tv_diaryTitle"
        android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/tv_diaryDate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_divider1"
        android:background="@null"
        android:text="日记日期"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/tv_diaryDate"
        android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/tv_diaryContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_divider2"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:layout_margin="20dp"
        android:text="日记内容"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"/>

</RelativeLayout>
